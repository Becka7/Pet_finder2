<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DogDetail">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@color/design_default_color_primary">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/DogImageView"
           android:src="@drawable/husky2"
           android:scaleType="centerCrop"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/white"
           android:paddingTop="20dp"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:paddingBottom="20dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="4.5/5"
               android:id="@+id/DogInfoTextView"

               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:textColor="@color/pink"
               android:textStyle="bold"/>
       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_above="@+id/saveDogButton"
               android:layout_alignParentStart="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:orientation="vertical"
               android:paddingLeft="30dp"
               android:paddingTop="20dp"
               android:paddingRight="30dp">

               <TextView
                   android:id="@+id/websiteTextView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_above="@+id/phoneTextView"
                   android:layout_marginBottom="10dp"
                   android:drawableLeft="@drawable/baseline_exit_to_app_black_18"
                   android:drawablePadding="4dp"
                   android:gravity="center"
                   android:text="View on Yelp"
                   android:textColor="@color/design_default_color_primary"
                   android:textSize="15sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/phoneTextView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_above="@+id/addressTextView"
                   android:layout_marginBottom="10dp"
                   android:drawableLeft="@drawable/baseline_call_black_18"
                   android:drawablePadding="4dp"
                   android:gravity="center"
                   android:text="(503) 223-1282"
                   android:textSize="15sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/addressTextView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:drawableLeft="@drawable/baseline_map_black_18"
                   android:drawablePadding="4dp"
                   android:gravity="center_vertical"
                   android:text="123 SW Best Ever Ave. Portland, Oregon, 97222"
                   android:textSize="15sp"
                   android:textStyle="bold" />


           </LinearLayout>

           <Button
               android:id="@+id/saveDogButton"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:background="#FFA500"
               android:text="Adopt Dog"
               android:textColor="@color/white"
               android:textSize="15sp" />
       </RelativeLayout>

   </LinearLayout>

</FrameLayout>